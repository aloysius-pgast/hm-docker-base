#!/bin/bash
ARCH=`uname -a | awk '{print $13}'`
if ! [[ "$ARCH" == armv* ]]
then
    echo "Script should be run on an armv architecture"
    exit 1
fi
DOCKERFILE=Dockerfile-rpi
TAG=rpi-backend-latest
TIMESTAMP=`date +"%Y%m%d%H%M%S"`
docker build -f $DOCKERFILE --pull --force-rm=true --rm=true --build-arg TIMESTAMP=$TIMESTAMP -t apendergast/hm-docker-base:$TAG .
